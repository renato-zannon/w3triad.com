<dl>
  <%= content_tag :dt, t(:nickname) %> <%= content_tag :dd, @user.nickname %>
  <%= content_tag :dt, t(:name) %> <%= content_tag :dd, @user.name %>
  <%= content_tag :dt, t(:bio) %> <%= content_tag :dd, @user.bio %>
  <%= content_tag :dt, t(:email) %> <%= content_tag :dd, @user.email %>
</dl>

<%= content_tag :h3, t(:latest_posts) %>
<ul>
  <% @user.posts.each do |post| %>
    <li><%= link_to post.title, post %>
  <% end %>
</ul>
<% if current_user == @user %>
  <%= button_to t(:edit_profile), edit_profile_path(@user), :method => :get %>
<% end %>
