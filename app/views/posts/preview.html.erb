<h3><%= @post.title %></h3>
<% @post.formatted_paragraphs.each do |paragraph| %>
  <%= paragraph.html_safe %>
<% end %>
<% post_attributes = {:title => @post.title, :content => @post.content} %>
<%= button_to t(:save_post), {:action => :create, :post => post_attributes}, :method => :post %>
<%= link_to t(:keep_editing), {:action => :new, :post => post_attributes} %>
