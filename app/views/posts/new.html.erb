<%= render :partial => 'shared/error_messages', :locals => { :object => @post } %>
<%= form_for @post do |f| %>
  <%= f.label :title, "Title" %><br>
  <%= f.text_field :title %><br>

  <%= f.label :content, "Content" %><br>
  <%= f.text_area :content, :size => "100x20" %><br>

  <%= f.submit "Save Post" %>
  <%= f.submit :preview, :name => "preview_button" %>
<% end %>
