<%= content_tag :h2, I18n.t(:admin_login) %>

<%= form_tag sessions_path do %>
  <%= label_tag :nickname, t(:nickname) %><br>
  <%= text_field_tag :nickname, params[:nickname] %><br>

  <%= label_tag :password, t(:password) %><br>
  <%= password_field_tag :password %><br>

  <%= get_captcha.html_safe rescue "" %>
  <%= submit_tag t(:login) %>
<% end %>
